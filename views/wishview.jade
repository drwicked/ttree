extends layout

block content
	if !user
		h1 Please <a href="/login">login</a>
	else
		link(rel='stylesheet', href='/css/lib/tagmanager.css')
		#newWishWrap
			h1 View Wish
			a(href=wish.linkURL,target="_new")
				h2= wish.title
			h3 Wished by #{wish.ownerName}
			
			p= wish.description
			label Needed #{moment(wish.neededBeforeDate).fromNow()}
			
			
block footer