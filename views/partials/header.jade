.navbar.navbar-default.navbar-fixed-top
	.container
		.navbar-header
			button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
				span.sr-only Toggle navigation
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.navbar-brand(href='/')
				i.fa.fa-tree
				| TTree
		.collapse.navbar-collapse
			ul.nav.navbar-nav
				if user
					li(class=(title == 'My Tree' ? 'active' : undefined) )
						a(href='/tree') My Tree
					li(class=(title == 'My Wishes' ? 'active' : undefined) )
						a(href='/wish') Add Wish
					li(class=(title == 'Find' ? 'active' : undefined) )
						a(href='/find') Find
					li(style="display:none", class=(title == 'API Examples') ? 'active' : undefined)
						a(href='/api') API Examples
				li(class=(title == 'News') ? 'active' : undefined)
					a(href='/news') News
				li(class=(title == 'Contact') ? 'active' : undefined)
					a(href='/contact') Contact
			ul.nav.navbar-nav.navbar-right
				if !user
					li(class=(title == 'Login') ? 'active' : undefined)
						a(href='/login') Login
					li(class=(title == 'Create Account') ? 'active' : undefined)
						a(href='/signup') Create Account
				else
					li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
						a.dropdown-toggle(href='#', data-toggle='dropdown')
							if user.picture
								img(src='#{user.picture}')
							else
								img(src=(user.hasProfileImage == true ? siteURL+'img/p/'+user.id+'.jpg' : '/img/defaultUser.png'))
							| #{user.username || user.email || user.id}&nbsp;
							i.caret
						ul.dropdown-menu
							li
								a(href='/account') My Account
							if user.admin
								li.divider
								li
									a(href='/admin') Admin Menu
							li.divider
							li
								a(href='/logout') Logout
